<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:background="@color/Yellow"
    android:gravity="center"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/titleTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/linearImageTask"
        android:layout_toRightOf="@+id/imageRecipe"
        android:text="@string/empty"
        android:layout_centerVertical="true"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <CheckBox
        android:id="@+id/checkElemTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:text="@string/empty" />

    <ImageView
        android:id="@+id/imageRecipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/checkElemTask"
        android:contentDescription="@string/empty"
        android:src="@drawable/lbl" />

    <LinearLayout
        android:id="@+id/linearImageTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" >

        <ImageButton
            android:id="@+id/imageButtonEditTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:adjustViewBounds="true"
            android:background="@drawable/button_touch_secondstyle"
            android:contentDescription="@string/menuList2"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/edit" />

        <ImageButton
            android:id="@+id/imageButtonDelTask"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:adjustViewBounds="true"
            android:background="@drawable/button_touch_secondstyle"
            android:contentDescription="@string/delete"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/delete" />
    </LinearLayout>

</RelativeLayout>