<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#F5A9A9" />
      <stroke
          android:width="1dp"
          android:color="#FE2E2E" />
      <corners
          android:radius="6dp" />
      <padding
          android:left="5dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="5dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#F5A9A9"
          android:endColor="#FE2E2E"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#FE2E2E" />
      <corners
          android:radius="6dp" />
      <padding
          android:left="5dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="5dp" />
    </shape>
  </item>
</selector>