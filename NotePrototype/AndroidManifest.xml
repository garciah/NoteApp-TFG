<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.urjc.noteprototype"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.urjc.noteprototype.InitWindows"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.urjc.noteprototype.MenuApp"
            android:label="@string/menu" >
        </activity>
        <activity
            android:name="com.urjc.noteprototype.EditNote"
            android:label="@string/butMenu1" >
        </activity>
        <activity
            android:name="com.urjc.noteprototype.EditPwd"
            android:label="@string/butMenu2" >
        </activity>
        <activity
            android:name="com.urjc.noteprototype.ViewPwd"
            android:label="@string/butMenu2" >
        </activity>
        <activity
            android:name="com.urjc.noteprototype.NoteList"
            android:label="@string/butMenu1" >
        </activity>
        <activity
            android:name="com.urjc.noteprototype.PasswordsList"
            android:label="@string/butMenu2" >
        </activity>
        <activity
            android:name="com.urjc.noteprototype.BuyList"
            android:label="@string/shopList" >
        </activity>
        <activity
            android:name="com.urjc.noteprototype.EditBuy"
            android:label="@string/shopList" >
        </activity>
        <activity
            android:name="com.urjc.noteprototype.BuyElemList"
            android:label="@string/elemList" >
        </activity>
        <activity
            android:name="com.urjc.noteprototype.TaskList"
            android:label="@string/tasks" >
        </activity>
        <activity
            android:name="com.urjc.noteprototype.EditTask"
            android:label="@string/task"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="com.urjc.noteprototype.EditElement"
            android:label="@string/elemList"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="com.urjc.noteprototype.RecipeList"
            android:label="@string/recipes" >
        </activity>
        <activity
            android:name="com.urjc.noteprototype.FileChooser"
            android:label="@string/recipes" >
        </activity>
        <activity
            android:name="com.urjc.noteprototype.EditRecipe"
            android:label="@string/recipes" >
        </activity>
        <activity
            android:name="com.urjc.noteprototype.AccList"
            android:label="@string/accounts" >
        </activity>
        <activity
            android:name="com.urjc.noteprototype.EditAcc"
            android:label="@string/accounts" >
        </activity>
        <activity
            android:name="com.urjc.noteprototype.TableAccount"
            android:label="@string/accounts" >
        </activity>
        <activity
            android:name="com.urjc.noteprototype.AccElemList"
            android:label="@string/accounts" >
        </activity>
        <activity
            android:name="com.urjc.noteprototype.EditElementAcc"
            android:label="@string/accounts" >
        </activity>
        <activity
            android:name="com.urjc.noteprototype.AboutApp"
            android:label="@string/about_tit"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="com.urjc.noteprototype.ChargeFile"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="*"
                    android:mimeType="*/*"
                    android:pathPattern=".*\\.nfh"
                    android:scheme="file" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:mimeType="application/nfh" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:mimeType="application/octet-stream" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.urjc.noteprototype.FileInputChooser"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.urjc.noteprototype.HelpActivity"
            android:label="@string/menu_help" >
        </activity>
    </application>

</manifest>